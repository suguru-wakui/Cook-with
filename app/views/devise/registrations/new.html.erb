<div class="sign-up-page">
 <div class="card">
  <div class="card-header">
   アカウントを作成する
  </div>

  <div class="card-body">
   <%= form_with scope:resource,as:resource_name,url:registration_path(resource_name),local:true do |f|%>
    <%= render"devise/shared/error_messages",resource:resource%>
    
    <div class="form-group">
     <%= f.email_field :email,autofocus:true, autocomplete:"email", class:"form-control", placeholder:"メールアドレス"%>
    </div>

    <div class="form-group">
     <%= f.text_field :name,class:"form-control", placeholder:"店名"%>
    </div> 

    <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>      

    <div class="sign-up__submit-btn">
     <%= f.submit"はじめる", class:"btn btn-block text-white"%>
    </div> 
   <% end %>

   <div class="mt-3">
    <%= render "devise/shared/links"%>
   </div>
  </div>

 </div>
</div>